---
import { cn } from "@/lib/utils";
import { buttonVariants } from "./ui/button";

interface Link {
  name: string;
  href: string;
  active: (pathname: string) => boolean;
}

const links: Link[] = [
  {
    name: "Projects",
    href: "/",
    active: (pathname: string) =>
      pathname.startsWith("/projects") || pathname === "/",
  },
  {
    name: "Resume",
    href: "/resume",
    active: (pathname: string) => pathname.startsWith("/resume"),
  },
];
---

<div
  class="pb-8 pt-4 w-full sticky top-0 z-50 bg-linear-to-b from-background to-transparent"
>
  <div class="container2 flex gap-4 justify-between">
    {
      links.map((link) => {
        const isActive = link.active(Astro.url.pathname);
        return (
          <a
            href={link.href}
            class={cn(
              buttonVariants({
                size: "xl",
                variant: isActive ? "default" : "inverse",
              }),
              isActive && "flex-1",
            )}
          >
            {link.name}
          </a>
        );
      })
    }
  </div>
</div>
