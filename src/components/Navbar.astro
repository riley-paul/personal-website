<script>
  let prevScrollpos = window.pageYOffset;
  window.onscroll = function () {
    const currentScrollPos = window.pageYOffset;
    if (prevScrollpos > currentScrollPos) {
      document.getElementById("navbar").style.top = "0";
    } else {
      document.getElementById("navbar").style.top = "-4rem";
    }
    prevScrollpos = currentScrollPos;
  };
</script>

<nav class="w-full fixed top-0 bg-indigo-500 transition-all z-50" id="navbar">
  <div class="flex flex-row items-center justify-center h-16">
    <button>
      <a href="/">
        <img src="/logo.svg" class="h-10" alt="" />
      </a>
    </button>
  </div>
</nav>
