---
import type { CollectionEntry } from "astro:content";
import { buttonVariants } from "./ui/button";
import { getEntry } from "astro:content";
import { cn } from "@/utils/utils";

type Links = CollectionEntry<"projects">["data"]["links"];

interface Props {
  links: Links;
}

const { links = [] } = Astro.props;

const linksTyped = await Promise.all(
  links.map(async (link) => {
    const linkType = await getEntry("projectLinkType", link.type.id);
    return { ...link, ...linkType.data };
  })
);
---

{
  links && (
    <div class="flex gap-2">
      {linksTyped.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class={cn(buttonVariants({ variant: "link" }))}
        >
          <i class={`${link.icon} mr-2`} />
          {link.name}
        </a>
      ))}
    </div>
  )
}
