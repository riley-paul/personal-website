---
const { links } = Astro.props;

const iconMap = {
  source: {
    name: "Source Code",
    icon: "fa-brands fa-github",
  },
  home: {
    name: "Homepage",
    icon: "fa-solid fa-link",
  },
};
---

<div class="flex gap-2 my-2">
  {
    links.map((link) => (
      <a href={link.url} target="_blank" rel="noopener noreferrer">
        <div class="bg-gray-200 rounded px-3 py-1 text-sky-500 hover:text-sky-400">
          <span>
            <i class={iconMap[link.type].icon} />
            {iconMap[link.type].name}
          </span>
        </div>
      </a>
    ))
  }
</div>
