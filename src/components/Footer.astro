---
import data from "../data/contact.json";
const contacts = [
  ...data,
  { link: undefined, name: `Â© ${new Date().getFullYear()} Riley Paul` },
];
---

<footer
  id="footer"
  class="w-full flex flex-wrap justify-center items-center gap-3 p-6 py-16"
>
  {
    contacts.map((contact) => (
      <a
        class="text-gray-400 hover:text-gray-500 text-xs sm:text-sm"
        href={contact.link}
        target="_blank"
        rel="noopener noreferrer"
      >
        {contact.name}
      </a>
    ))
  }
</footer>
