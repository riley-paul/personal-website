---
import data from "../data/contact.json";
import { Button } from "./ui/button";
---

<footer
  id="footer"
  class="py-6 flex flex-col justify-center items-center gap-2"
>
  <div class="flex flex-row flex-wrap justify-center items-center gap-4">
    {
      data.map((contact) => (
        <a href={contact.link} target="_blank">
          <Button size="icon" title={contact.name}>
            <i class={contact.icon} />
          </Button>
        </a>
      ))
    }
  </div>
  <div class="flex gap-2">
    <a
      href="/Resume - Riley Paul.pdf"
      title="Download resume as PDF"
      class="hover:text-foreground text-muted-foreground">Resume.pdf</a
    >
    â€¢
    <a
      href="https://photo.rileypaul.ca"
      title="Photography Portfolio"
      class="flex items-center gap-1 hover:text-foreground text-muted-foreground"
      target="_blank"
      rel="noopener noreferrer"
    >
      <!-- <img src="/photo-logo.svg" alt="" class="invert h-5" /> -->
      Photography
    </a>
  </div>
  <span class="text-muted-foreground text-sm"
    >&copy <span>{new Date().getFullYear()}</span> Riley Paul</span
  >
</footer>
