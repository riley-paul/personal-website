---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{"Riley Paul" + (title ? ` - ${title}` : "")}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Roboto+Slab:wght@300;400;700&family=Share+Tech+Mono&display=swap"
      rel="stylesheet"
    />

    <script
      src="https://kit.fontawesome.com/c961af0e55.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-slate-900 text-gray-100 font-serif min-h-full">
    <Navbar />
    <main class="mt-16 w-full p-4 mx-auto max-w-3xl 2xl:max-w-6xl">
      <slot />
    </main>
    <Footer />

    <style is:global>
      .iframe-container {
        position: relative;
        overflow: hidden;
        width: 100%;
        margin-top: 1rem;
        padding-top: 56.25%; /* 16:9 Aspect Ratio (divide 9 by 16 = 0.5625) */
      }

      .iframe-container.model {
        padding-top: 100%;
      }

      /* Then style the iframe to fit in the container div with full height and width */
      .iframe-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
      }
    </style>
  </body>
</html>
