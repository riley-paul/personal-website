---
import Footer from "../components/Footer.astro";
import "../main.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Personal and professional portfolio" />
    <title>{"Riley Paul" + (title ? ` - ${title}` : "")}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Roboto+Slab:wght@300;400;700&family=Share+Tech+Mono&display=swap"
      rel="stylesheet"
    />

    <script
      src="https://kit.fontawesome.com/c961af0e55.js"
      crossorigin="anonymous"></script>
  </head>
  <body class="bg-background text-primary font-serif min-h-full h-full">
    <!-- <Navbar /> -->
    <main class="w-full p-4 mx-auto max-w-3xl 2xl:max-w-6xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>
