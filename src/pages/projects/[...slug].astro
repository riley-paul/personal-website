---
import { type CollectionEntry, getCollection } from "astro:content";
import formatDate from "@/lib/format-date";

import LinkList from "@/components/link-list";
import TagList from "@/components/tag-list";
import RootLayout from "@/layouts/root-layout.astro";
import Markdown from "@/layouts/markdown-layout.astro";
import WipBadge from "@/components/badges/wip-badge";
import { Button, Heading, Text } from "@radix-ui/themes";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"projects">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<RootLayout title={entry.data.title}>
  <header
    class="container2 py-8 bg-gradient-to-b from-background to-transparent"
  >
    <div class="flex gap-2 items-center justify-between">
      <Heading size="8">{entry.data.title}</Heading>
      {entry.data.wip && <WipBadge />}
    </div>
    <Text size="2" color="gray">{formatDate(entry.data.date)}</Text>
  </header>
  <section class="container2 grid gap-4">
    <TagList tags={entry.data.tags} />
    <LinkList links={entry.data.links ?? []} />
  </section>
  <section class="container2 pt-8">
    <Markdown>
      <Content />
    </Markdown>
    <div class="flex justify-center pt-20 pb-10">
      <Button size="3" variant="soft">
        <a href="/"> More Projects </a>
      </Button>
    </div>
  </section>
</RootLayout>
